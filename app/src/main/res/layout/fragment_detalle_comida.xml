<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Detalle"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etAlimentoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alimento"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etNotasDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notas"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Momento:" />
        <Spinner
            android:id="@+id/spMomentoDetalle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CalorÃ­as:" />
        <Spinner
            android:id="@+id/spCaloriasDetalle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"/>

        <CheckBox
            android:id="@+id/cbSaludableDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Es Saludable"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTUALIZAR DATOS"
            android:backgroundTint="#009688"/>

    </LinearLayout>
</ScrollView>